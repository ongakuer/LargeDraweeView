<resources>

    <!-- Base application theme. -->
    <style name="app_theme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#3B6939</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#52634F</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="colorTertiary">#38656A</item>
        <item name="colorOnTertiary">#FFFFFF</item>

        <item name="colorError">#BA1A1A</item>
        <item name="colorOnError">#FFFFFF</item>

        <item name="android:colorBackground">#F7FBF1</item>
        <item name="colorOnBackground">#191D17</item>

        <item name="colorSurface">#F7FBF1</item>
        <item name="colorOnSurface">#191D17</item>
        <item name="colorSurfaceVariant">#DEE5D8</item>
        <item name="colorOnSurfaceVariant">#424940</item>

        <item name="colorSurfaceDim">#D8DBD2</item>
        <item name="colorSurfaceBright">#F7FBF1</item>
        <item name="colorSurfaceContainer">#ECEFE6</item>


        <item name="colorOutline">#72796F</item>
        <item name="colorOutlineVariant">#C2C9BD</item>


        <item name="contentScrim">@android:color/transparent</item>
        <item name="statusBarScrim">@android:color/transparent</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="app_theme.transparent">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
